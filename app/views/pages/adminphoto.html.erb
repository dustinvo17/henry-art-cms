<%=render 'admin_inc/navbar'%>

<div class="container mx-auto py-24 ">
    <% if flash[:error].present?%>
   <div class="text-red-500 text-2xl font-semibold mb-5">
    <%= flash[:error]%>
   </div>
    <%end%>
 <div class="flex flex-row justify-between">
 
        <div class="text-2xl ">
           Created <%= time_ago_in_words(@image.created_at) %> ago
        </div> 
            <%= form_with(url: '/images/',method:'delete', html:{class:"form-gallery"} ) do |f|%>
            <%= f.hidden_field :id, :value => @image.id %>
            <%= f.submit 'Delete',method: :delete, data: {confirm: "Are you sure you want to delete this photo?"} ,class:"p-2 bg-red-400 text-white rounded cursor-pointer delete-img"%>
        <% end %>
    

    </div>
    <hr class="my-10">
    <div class="flex justify-center">

     <%= image_tag @image %>

    
    </div>


</div>

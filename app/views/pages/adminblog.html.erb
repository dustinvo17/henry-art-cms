<%=render 'admin_inc/navbar'%>
<div class="container mx-auto py-24">
  <a  class="grid grid-cols-2">
 
    <div class="<%= @id == 2 || @id == 4 ? 'order-1' : ''%> mx-5 " >
      <%= image_tag @blogitem[:blog_img] , class:"h-full w-full object-cover current-img",:data => {:id => @blogitem[:blog_img].id} %>
    </div>
    <%= form_with(url: '/admin/blog',method:'post' , class:"flex flex-col w-full ") do |f|%>
      <div>
        <%= f.label :title, 'Title' , class:"block text-gray-700 text-sm font-bold mb-2"%>
        <%= f.text_field :title,class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", :value => @blogitem[:title] %>
      </div>
      <div class="my-5">
        <%= f.label :body, 'Body' , class:"block text-gray-700 text-sm font-bold mb-2"%>
        <%= f.text_area :body,size: "20x20", :value => @blogitem[:body] ,class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"%>
      </div>
      <%= f.hidden_field :blogId, :value => @id %>
      <%= f.hidden_field :imgId,  class:'image-id-field' %>
      <%= f.submit 'Update',method: :delete, data: {confirm: "Are you sure you want to update this blog?"} ,class:"w-32 p-2 bg-red-400 text-white rounded cursor-pointer update-feature"%>
    <% end %>
  </a>
  <hr class="my-10">
  <%= render 'admin_inc/gallery' %>
</div>
